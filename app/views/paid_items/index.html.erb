<div class= 'text-center'>
  <h2><%= @travel.name %>　実績</h2>
</div>
<div class= 'text-right'>
  <h2>合計<%= @paid_items.all.sum(:cost) %>円</h2>
  <%= link_to '項目追加',  new_paid_item_path %>　　<%= link_to '戻る', travels_path %>
</div>

<% @paid_items.each do |paid_item| %>
  <ul>
    <li><%= paid_item.name %> <%= paid_item.cost %>円　<%= link_to '編集', edit_paid_item_path(paid_item)  %>　<%= link_to '削除', paid_item, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></li>
  </ul>
<% end %>
