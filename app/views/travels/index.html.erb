<div class= 'text-center'>
  <h1 id= 'tratitle'><%= current_user.name %>さんの旅行一覧</h1>
</div>
<div class= 'text-right'>
  <%= link_to '旅行追加',  new_travel_path %>
</div>
<% @travels.each do |travel| %>

<div class="card">
  <div class="card-header">
    <div class= 'text-center'>
      <%= travel.name %>
    </div>
  </div>    
  <div class="card-body">
    <div class= 'text-center'>
      <%= link_to '予算',  budget_items_path(travel) %>(<%= travel.budget_items.all.sum(:cost) %>円)　<%= link_to '実績',  paid_items_path(travel) %>(<%= travel.paid_items.all.sum(:cost) %>円)　　<%= link_to '旅行削除', travel, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
    </div>
  </div>
</div>
<% end %>
<%= paginate @travels %>
